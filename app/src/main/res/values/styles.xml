<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/carnation</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="chipStyle">@style/DefaultChipStyle</item>
    </style>

    <style name="TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="Text_semi_bold_dark_blue_grey_21" parent="TextAppearance">
        <item name="fontFamily">@font/exo_2_semibold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/dark_blue_grey</item>
    </style>

    <style name="Text_semi_bold_dark_blue_grey_32" parent="TextAppearance">
        <item name="fontFamily">@font/exo_2_semibold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/dark_blue_grey</item>
    </style>

    <style name="Text_regular_dark_blue_grey_24" parent="TextAppearance">
        <item name="fontFamily">@font/exo_2_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_blue_grey</item>
    </style>

    <style name="Text_regular_steel_16" parent="TextAppearance">
        <item name="fontFamily">@font/exo_2_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/steel</item>
    </style>

<!--    <style name="Text_semi_bold_steel_16" parent="TextAppearance">-->
<!--        <item name="fontFamily">@font/exo_2_regular</item>-->
<!--        <item name="android:textSize">16sp</item>-->
<!--        <item name="android:textColor">@color/steel</item>-->
<!--    </style>-->
    <style name="Text_semi_bold_dark_blue_grey_16" parent="Text_semi_bold_dark_blue_grey_32">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue_grey</item>
    </style>

    <style name="Text_semi_bold_steel_14" parent="Text_semi_bold_dark_blue_grey_32">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/steel</item>
    </style>
    


    <style name="Text_regular_dusk_12" parent="TextAppearance">
        <item name="fontFamily">@font/exo_2_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dusk</item>
    </style>

    <style name="DefaultTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/exo_2_semibold</item>
        <item name="android:textSize">13sp</item>
    </style>



    <style name="DefaultChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:minHeight">27dp</item>
        <item name="android:textAppearance">@style/DefaultTextAppearance</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="chipBackgroundColor">@color/chip_selected_background_color_state</item>
        <item name="chipStrokeColor">@color/chip_stroke_selected_color_state</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
    </style>


</resources>